---
const { label = "Descargar", href = "#", class: customClass = "" } = Astro.props;
---

<a href={href} download class={`button ${customClass}`}>
  {label}
  <svg class="icon -rotate-90" viewBox="0 0 24 24" fill="currentColor">
    <path
      fill-rule="evenodd"
      d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm4.28 10.28a.75.75 0 000-1.06l-3-3a.75.75 0 10-1.06 1.06l1.72 1.72H8.25a.75.75 0 000 1.5h5.69l-1.72 1.72a.75.75 0 101.06 1.06l3-3z"
      clip-rule="evenodd"
    />
  </svg>
</a>


<style>
.button {
  @apply bg-sky-500 text-white font-semibold px-5 py-2 rounded-xl shadow-md hover:bg-sky-600 transition-all flex items-center gap-2 relative overflow-hidden;
  box-shadow: 0px 10px 20px rgba(122, 121, 121, 0.2);
  border: 3px solid #ffffff4d;
  border-radius: 9999px;
  font-size: 15px;
  font-weight: bold;
  cursor: pointer;
  height: 40px;
  
}

.icon {
  @apply h-5 w-5;
  transition: all 0.3s ease-in-out;
}

.button:hover {
  transform: scale(1.05);
  border-color: #fff9;
}

.button:hover .icon {
  transform: translateX(4px);
}

.button::before {
  content: "";
  position: absolute;
  width: 100px;
  height: 100%;
  background-image: linear-gradient(
    120deg,
    rgba(255, 255, 255, 0) 30%,
    rgba(255, 255, 255, 0.8),
    rgba(255, 255, 255, 0) 70%
  );
  top: 0;
  left: -100px;
  opacity: 0.6;
}

.button:hover::before {
  animation: shine 1.5s ease-out infinite;
}

@keyframes shine {
  0% {
    left: -100px;
  }
  60% {
    left: 100%;
  }
  to {
    left: 100%;
  }
}

@keyframes wave3d {
  0% {
    transform: rotateX(0deg) rotateY(0deg) scale(1);
  }
  25% {
    transform: rotateX(5deg) rotateY(-5deg) scale(1.02);
  }
  50% {
    transform: rotateX(0deg) rotateY(0deg) scale(1);
  }
  75% {
    transform: rotateX(-5deg) rotateY(5deg) scale(1.02);
  }
  100% {
    transform: rotateX(0deg) rotateY(0deg) scale(1);
  }
}

.animate-wave3d {
  animation: wave3d 4s ease-in-out infinite;
  transform-style: preserve-3d;
  backface-visibility: hidden;
  will-change: transform;
}
.animate-wave3d {
  animation: wave3d 4s ease-in-out infinite;
  transform-style: preserve-3d;
  backface-visibility: hidden;
  will-change: transform;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}
  
</style>